{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es2015.promise"
    ],
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
