{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "removeComments": true,
    "declaration": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
